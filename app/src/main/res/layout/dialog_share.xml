<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_home_page"
    android:layout_width="match_parent"
    android:layout_height="250dp"
    android:background="#70000000"
    tools:context="come.newbula.xing.ui.homepage.HomeFragmentActivity">

 <LinearLayout
     android:id="@+id/ll_share"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:layout_marginTop="50dp"
     android:orientation="horizontal"
     android:layout_centerHorizontal="true"
     >
  <RelativeLayout
      android:id="@+id/rl_weixinfriend"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content">
   <ImageView
       android:id="@+id/img_wexinfriend"
       android:layout_width="50dp"
       android:layout_height="50dp"
       android:src="@mipmap/share_wechat"/>
   <TextView
       android:id="@+id/tv_weixinfriend"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:text="微信好友"
       android:layout_marginTop="10dp"
       android:layout_below="@+id/img_wexinfriend"/>
  </RelativeLayout>
  <RelativeLayout
      android:id="@+id/rl_pengyq"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content">
   <ImageView
       android:id="@+id/img_pengyq"
       android:layout_width="50dp"
       android:layout_height="50dp"
       android:src="@mipmap/share_pengyouquan"
       android:layout_marginLeft="20dp"/>
   <TextView
       android:id="@+id/tv_pengyouquan"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:text="朋友圈"
       android:layout_marginTop="10dp"
       android:layout_below="@+id/img_pengyq"
       android:layout_marginLeft="20dp"
     />
  </RelativeLayout>
  <RelativeLayout
      android:id="@+id/rl_qq"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content">
   <ImageView
       android:id="@+id/img_qq"
       android:layout_width="50dp"
       android:layout_height="50dp"
       android:src="@mipmap/share_qq"

       android:layout_marginLeft="20dp"/>
   <TextView
       android:id="@+id/tv_qq"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:text="QQ"
       android:layout_marginTop="10dp"
       android:layout_marginLeft="35dp"
       android:layout_below="@+id/img_qq"
       />
  </RelativeLayout>

 </LinearLayout>
 <LinearLayout
     android:layout_below="@+id/ll_share"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:layout_marginTop="25dp"
     android:orientation="horizontal"
     android:layout_centerHorizontal="true"
     >
  <RelativeLayout
      android:id="@+id/rl_report"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content">

   <TextView
       android:id="@+id/tv_report"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:text="举报"
       android:layout_marginTop="10dp"
       android:layout_marginLeft="10dp"
       android:layout_below="@+id/img_report"/>

   <ImageView
       android:id="@+id/img_report"
       android:layout_width="50dp"
       android:layout_height="50dp"
       android:src="@mipmap/share_report"
       />
  </RelativeLayout>
  <RelativeLayout
      android:id="@+id/rl_save"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content">
   <ImageView
       android:id="@+id/img_save"
       android:layout_width="50dp"
       android:layout_height="50dp"
       android:src="@mipmap/share_download"
       android:layout_marginLeft="30dp"/>
   <TextView
       android:id="@+id/tv_save"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:text="保存到相册"
       android:layout_marginTop="10dp"
       android:layout_below="@+id/img_save"
       android:layout_marginLeft="15dp"
       />
  </RelativeLayout>
  <RelativeLayout
      android:id="@+id/rl_copy"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content">
   <ImageView
       android:id="@+id/img_copy"
       android:layout_width="50dp"
       android:layout_height="50dp"
       android:src="@mipmap/share_copylink"

       android:layout_marginLeft="20dp"/>
   <TextView
       android:id="@+id/tv_copy"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:text="复制链接"
       android:layout_marginTop="10dp"
       android:layout_marginLeft="17dp"
       android:layout_below="@+id/img_copy"
       />
  </RelativeLayout>

 </LinearLayout>
</RelativeLayout>
