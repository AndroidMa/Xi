<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_home_page"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context="come.newbula.xing.ui.homepage.HomeFragmentActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:orientation="horizontal"
        android:background="@color/color_2B2E35"
        >

        <RelativeLayout
            android:id="@+id/rl_hot"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            >
            <TextView
                android:id="@+id/tv_lins1"
                android:layout_width="30dp"
                android:layout_height="3dp"
                android:layout_marginRight="50dp"
                android:layout_alignParentRight="true"
                android:background="@color/color_CF5730"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="热门"
                android:textSize="16sp"
                android:textColor="@color/white"
                android:layout_marginRight="50dp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_newest"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
           >
            <TextView
                android:id="@+id/tv_lins"
                android:layout_width="30dp"
                android:layout_height="3dp"
                android:layout_marginLeft="50dp"
                android:background="@color/color_CF5730"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="最新"
                android:textSize="16sp"
                android:textColor="@color/white"
                android:layout_centerVertical="true"
                android:layout_marginLeft="50dp"
                android:id="@+id/textView" />
        </RelativeLayout>
    </LinearLayout>

    <FrameLayout
        android:id="@+id/frameLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_1B1F29"
        >

    </FrameLayout>

</LinearLayout>
