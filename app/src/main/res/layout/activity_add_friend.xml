<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_add_friend"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background"
    tools:context="come.newbula.xing.ui.personinfo.activity.AddFriendActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/titile">
        <RelativeLayout
            android:id="@+id/rl_back"
            android:layout_width="50dp"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@mipmap/back"
                android:layout_centerInParent="true"
                />
        </RelativeLayout>
        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="找朋友"
            android:textSize="16sp"
            android:layout_centerInParent="true"
            android:textColor="@color/white"
            />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/line"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="看谁也在用虾比"
            android:textSize="12sp"
            android:textColor="@color/color_7B7B7B"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="15dp"
            />
        <TextView
            android:id="@+id/tv_lianxiren"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:background="@color/color_CF5730"
            android:text="联系人"
            android:textSize="14sp"
            android:textColor="@color/white"
            android:gravity="center"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/line"/>
    <RelativeLayout
        android:id="@+id/rl_weixinfriend"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#10ffffff"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        >
       <ImageView
           android:id="@+id/img_1"
           android:layout_width="40dp"
           android:layout_height="40dp"
           android:layout_centerVertical="true"
           android:layout_marginLeft="10dp"
           android:src="@mipmap/zhao_weix"
           />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="@color/white"
            android:text="邀请微信好友"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/img_1"
            android:layout_marginLeft="30dp"
            />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#10ffffff"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        >
        <ImageView
            android:id="@+id/img_2"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:src="@mipmap/zhao_qq"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="@color/white"
            android:text="邀请QQ好友"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/img_2"
            android:layout_marginLeft="30dp"
            />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#10ffffff"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="15dp"
        >
        <ImageView
            android:id="@+id/img_3"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:src="@mipmap/zhao_weibo"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="@color/white"
            android:text="邀请微博好友"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/img_3"
            android:layout_marginLeft="30dp"
            />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/line"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="你可能感兴趣的人"
        android:textSize="12sp"
        android:textColor="@color/color_7B7B7B"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="15dp"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#10ffffff"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="15dp"
        >
        <RelativeLayout
            android:id="@+id/rl_1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/img_head"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginLeft="10dp"
                android:src="@mipmap/ico_morentouxiang"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="8dp"
                />
            <TextView
                android:id="@+id/tv_username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SYF"
                android:textSize="14sp"
                android:textColor="@color/color_FFE600"
                android:layout_gravity="center_horizontal"
                android:layout_below="@+id/img_head"
                android:layout_centerHorizontal="true"
                />
        </RelativeLayout>
        <TextView
            android:id="@+id/tv_fans"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="粉丝"
            android:layout_toRightOf="@+id/rl_1"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="25dp"
            android:textSize="16sp"
            android:textColor="@color/white"/>
        <TextView
            android:id="@+id/tv_fans_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1K"
            android:layout_toRightOf="@+id/tv_fans"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="8dp"
            android:textSize="16sp"
            android:textColor="@color/white"/>


        <TextView
            android:id="@+id/tv_works"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="作品"
            android:layout_toRightOf="@+id/tv_fans_number"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="25dp"
            android:textSize="16sp"
            android:textColor="@color/white"/>
        <TextView
            android:id="@+id/tv_works_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="100"
            android:layout_toRightOf="@+id/tv_works"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="8dp"
            android:textSize="16sp"
            android:textColor="@color/white"/>

        <TextView
            android:id="@+id/tv_autograph"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="本宝宝还没有个性签名"
            android:layout_toRightOf="@+id/rl_1"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="25dp"
            android:textSize="14sp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="3dp"
           />
        <TextView
            android:layout_width="70dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:text="关注"
            android:textSize="14sp"
            android:textColor="@color/white"
            android:background="@color/color_CF5730"
            android:gravity="center"
           />
    </RelativeLayout>
</LinearLayout>
